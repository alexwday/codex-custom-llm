# Codex Proxy Dashboard Configuration

# LLM API Settings
LLM_API_BASE_URL=https://your-llm-endpoint.com/v1
LLM_MODEL_NAME=gpt-4-internal
MAX_TOKENS=4096

# OAuth2 Settings (for enterprise endpoints)
OAUTH_ENDPOINT=https://your-oauth-endpoint.com/token
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret

# Token refresh interval in seconds (default: 900 = 15 minutes)
TOKEN_REFRESH_INTERVAL=900

# Mock Mode (for local testing without enterprise dependencies)
# Set to 'true' to skip OAuth and SSL setup
MOCK_MODE=false
